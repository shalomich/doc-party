@model DocParty.RequestHandlers.Account.Login.LoginQuery
@{
    Layout = "AuthLayout";
}

<style>
    .form-elem-block {
        width: 100%;
        height: 40px;
    }

    .label-text {
        font-size: 28px;
        color: black;
    }
</style>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="offset-4 col-4">
            <div class="row">
                <h1 style="color:blue; text-align:center">Sign in</h1>
            </div>
            <div class="row">
                @Html.ValidationSummary(false, "", new { @class = "text-danger font-weight-bold" })     
            </div>
            <div class="row form-group">
                <div class="col-3">
                    @Html.LabelFor(login => login.Email, "Email", new { @class = "label-text" })
                </div>
                <div class="col">
                    @Html.TextBoxFor(login => login.Email, "", new { @class = "form-elem-block" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3">
                    @Html.LabelFor(login => login.Password, "Password", new { @class = "label-text" })<br />
                </div>
                <div class="col">
                    @Html.TextBoxFor(login => login.Password, "", new { @class = "form-elem-block" })
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <button type="submit" class="btn btn-primary" style="width:100%">Sign in</button>
                </div>
            </div>
            <div class="row" style="text-align:center">
                @Html.ActionLink("Registration", "Register")
            </div>
            <div class="row" style="text-align:center">
                @Html.ActionLink("Sign in with Google", "GoogleConnect")
            </div>
        </div>
    </div>
}
