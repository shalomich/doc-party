@model DocParty.RequestHandlers.Account.Register.RegistrationCommand

@{
    Layout = "AuthLayout";
}

<style>
    .form-elem-block {
        width: 100%;
        height: 40px;
    }

    .label-text {
        font-size: 28px;
        color: black;
    }
</style>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="offset-4 col-4">
            <div class="row">
                <h1 style="color:blue; text-align:center">Registration</h1>
            </div>
            <div class="row">
                @Html.ValidationSummary(false, "", new { @class = "text-danger font-weight-bold" })
            </div>
            <div class="row form-group">
                <div class="col-3">
                    @Html.LabelFor(registration => registration.UserName, "Nickname", new { @class = "label-text" })
                </div>
                <div class="col">
                    @Html.TextBoxFor(registration => registration.UserName, "", new { @class = "form-elem-block" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3">
                    @Html.LabelFor(registration => registration.Email, "Email", new { @class = "label-text" })
                </div>
                <div class="col">
                    @Html.TextBoxFor(registration => registration.Email, "", new { @class = "form-elem-block" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3">
                    @Html.LabelFor(registration => registration.Password, "Password", new { @class = "label-text" })<br />
                </div>
                <div class="col">
                    @Html.TextBoxFor(registration => registration.Password, "", new { @class = "form-elem-block" })
                </div>
            </div>
            <div class="form-group row">
                <div>
                    <button type="submit" class="btn btn-primary" style="width:100%">Register</button>
                </div>
            </div>
            <div class="row" style="text-align:center">
                @Html.ActionLink("Sign in", "Login")
            </div>
        </div>
    </div>
}
