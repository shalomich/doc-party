
@using DocParty.ViewModel;
@using DocParty.Extensions;
@model ProjectInfo

<form action=@Model.SnapshotAddingLocation method="post">
    <div class="row">
        <div class="offset-4 col-4">
            <div class="row">
                @Html.ValidationSummary(false, "", new { @class = "text-danger font-weight-bold" })
            </div>
            <div class="form-group row">
                <label for="name" class="col-4 col-form-label">Snapshot name</label>
                <div class="col-8">
                    <input type="text" class="form-control" id="name" name="name"><br />
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-4 col-form-label">Description</label>
                <div class="col-8">
                    <textarea type="text" class="form-control" id="description" name="description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary" @Html.DisabledIf(!Model.IsActive)>Create</button>
                </div>
            </div>
        </div>
    </div>
</form>
