@using DocParty.Models;
@model Project

@{
    string addCommentLocation = $"/{Model.Creator.UserName}/{Model.Name}/comment";

    var snapshotNames = Model.Snapshots.Select(snapshot => snapshot.Name);
}

<form action=@addCommentLocation method="post">
    <div class="form-group row">
        <label for="snapshotName" class="col-2 col-form-label">Snapshot name</label>
        <div class="col-3">
            <select class="form-control" id="snapshotName" name="snapshotName">
                @foreach (var snapshotName in snapshotNames)
                {
                    <option value=@snapshotName>@snapshotName</option>
                }
            </select><br/>
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-2 col-form-label">Comment</label>
        <div class="col">
            <textarea type="text" class="form-control" id="text" name="text" style="height:200px;"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <button type="submit" class="btn btn-primary" style="width:100%">Write</button>
        </div>
    </div>    
</form>
