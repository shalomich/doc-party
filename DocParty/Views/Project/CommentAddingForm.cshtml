@using DocParty.ViewModel;
@using DocParty.Extensions;
@model ProjectInfo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form action=@Model.FormData.CommentLocation method="post">
    <div class="form-group row">
        <label for="snapshotName" class="col-2 col-form-label">Snapshot name</label>
        <div class="col-3">
            @Html.DropDownList("snapshotName", Model.FormData.SnapshotChoice)<br />
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-2 col-form-label">Comment</label>
        <div class="col">
            <textarea type="text" class="form-control" id="text" name="text" style="height:200px;"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <button type="submit" class="btn btn-primary" style="width:100%" @Html.DisabledIf(!Model.IsActive)>Write</button>
        </div>
    </div>
</form>
